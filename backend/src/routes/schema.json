{
  "newGame": {
    "description": "Create a new game",
    "tags": ["Game"],
    "body": {
      "type": "object",
      "required": ["winnerId"],
      "properties": {
        "winnerId": { "type": "string" },
        "tournamentId": { "type": "string" }
      }
    },
    "response": {
      "201": {
        "description": "Game created successfully",
        "type": "object",
        "properties": {
          "id": { "type": "string" }
        }
      },
      "400": {
        "description": "Bad request, e.g., player not found",
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    }
  }
}