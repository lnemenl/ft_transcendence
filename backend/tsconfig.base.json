{
  "compilerOptions": {
    "target": "es2021",          // Compile to modern JavaScript
    "module": "commonjs",         // Use the standard Node.js module system
    "moduleResolution": "node",
    "outDir": "./dist",           // Output compiled JS files to a 'dist' folder
    "strict": true,               // Enable all strict type-checking options
    "esModuleInterop": true,      // Allows compatibility with different module types
    "skipLibCheck": true,         // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"] // Don't check these folders
}
