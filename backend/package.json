{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "description": "The ft_transcendence backend monorepo",
  "private": true,
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "check": "prettier --check \"src/**/*.ts\"",
    "prisma": "npx prisma migrate dev --name init",
    "dev": "ts-node src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "clean:all": "rm -rf database/*.db prisma/migrations && npm run prisma",
    "test": "npx dotenv-cli -e backend/.env.test -- bash -c 'npm run test:setup && jest --runInBand'",
    "test:coverage": "npx dotenv-cli -e backend/.env.test -- bash -c 'npm run test:setup && jest --coverage --runInBand'",
    "test:setup": "npx dotenv -e backend/.env.test -- bash -c 'export DATABASE_URL=\"file:$(pwd)/database/test.db\" && npx prisma migrate reset --force && npx prisma migrate deploy'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "src/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.3.2",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@prisma/adapter-better-sqlite3": "^6.16.3",
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.2"
  }
}
